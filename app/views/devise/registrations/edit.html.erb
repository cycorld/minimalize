<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2>정보 수정</h2>
      
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', method: :put }) do |f| %>
        <%= devise_error_messages! %>
          <%= f.input :email, autofocus: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <%= f.input :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.input :password_confirmation, autocomplete: "off" %>
          <%= f.input :name %>
          <%= f.input :phone %>
          <i>(we need your current password to confirm your changes)</i><br />
          <%= f.input :current_password, autocomplete: "off" %>
          <%= f.button :submit, '정보수정' %>
      <% end %>
      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
